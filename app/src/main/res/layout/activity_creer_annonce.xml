<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.parse.app.CreerAnnonceActivity"
    android:id="@+id/setup_step1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/frame"
        android:padding="20dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3dp"
            android:layout_marginBottom="15dp"
            android:text="Message"
            android:textColor="@color/app_color"
            android:textStyle="normal"
            android:textSize="18sp"/>


        <LinearLayout
            android:id="@+id/formMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >


            <EditText
                android:id="@+id/message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="top"
                android:hint="Entrer le message"
                android:inputType="textMultiLine|textCapSentences"
                android:lines="5"
                android:maxLength="600"
                android:textColor="@color/evernote_footer_text"
                android:paddingBottom="11dp"
                android:paddingLeft="6dp"
                android:paddingEnd="12dp"
                android:paddingRight="12dp"
                android:paddingTop="10dp"
                android:textColorHint="@color/gris_background"
                android:textSize="16sp" >

                <requestFocus />
            </EditText>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
