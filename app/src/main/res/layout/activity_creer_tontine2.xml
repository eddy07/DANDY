<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.save.app.LoginActivity"
    android:id="@+id/setup_step1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
            android:id="@+id/layoutpsw"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/framelog"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/cahier1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/edit"
                android:textColorHint="@color/gris_background"
                android:textColor="@color/evernote_footer_text"
                android:background="@color/white"
                android:hint="montant"
                android:layout_marginLeft="5dp"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:layout_weight="7"
                android:textSize="18dp"/>
            <ImageButton
                android:id="@+id/sendBtn2"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_login2"
                android:layout_gravity="center"
                android:src="@drawable/ic_action_accept"/>
        </LinearLayout>

        <LinearLayout
        android:id="@+id/layoutpsw1"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-8dp"
        android:background="@drawable/framelog"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/edit"
            android:textColorHint="@color/gris_background"
            android:textColor="@color/evernote_footer_text"
            android:background="@color/white"
            android:hint="Montant amande"
            android:layout_marginLeft="5dp"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:layout_weight="7"
            android:textSize="18dp"/>
        <ImageButton
            android:id="@+id/sendBtn"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_login"
            android:layout_gravity="center"
            android:src="@drawable/ic_action_accept"/>
    </LinearLayout>
   </LinearLayout>

</LinearLayout>
    </LinearLayout>