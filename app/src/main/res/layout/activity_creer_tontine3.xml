<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.save.app.LoginActivity"
    android:id="@+id/setup_step1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        android:paddingBottom="15dp"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="JOUR DE TONTINE"
        android:textColor="@color/gris"
        android:textSize="19dp"
        android:layout_marginTop="0dp"
        android:padding="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:background="@drawable/framelog"
        android:paddingBottom="15dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/nom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/edit"
            android:textColorHint="@color/gris_background"
            android:textColor="@color/evernote_footer_text"
            android:background="@color/white"
            android:hint="nom"
            android:layout_marginLeft="5dp"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textSize="18dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/typetontine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DESCRIPTION"
            android:layout_marginTop="10dp"
            android:textColor="@color/gris"
            android:textSize="19dp"
            android:padding="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@drawable/framelog"
            android:paddingBottom="15dp"
            android:orientation="vertical">
            <EditText
                android:id="@+id/description"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="top"
                android:hint="@string/description_tontine"
                android:inputType="textMultiLine|textCapSentences"
                android:lines="5"
                android:maxLength="600"
                android:paddingBottom="11dp"
                android:paddingLeft="6dp"
                android:paddingEnd="12dp"
                android:textColor="@color/evernote_footer_text"
                android:paddingRight="12dp"
                android:paddingTop="10dp"
                android:textColorHint="@color/gris_background"
                android:textSize="18sp" />

    </LinearLayout>
</LinearLayout>

</LinearLayout>
