<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.parse.app.WelcomeActivity">


   <LinearLayout
    android:id="@+id/blockapp"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical"
       android:layout_gravity="center|top"
    android:background="@drawable/frameapp"
    >
  <TextView
      android:id="@+id/app"
      android:layout_width="183dp"
      android:layout_height="wrap_content"
      android:text="I-Djangui"
      android:textColor="@color/white"
      android:layout_gravity="clip_vertical"
      android:layout_marginTop="30dp"
      android:layout_marginLeft="80dp"
      android:textSize="40dp"
      android:gravity="center|center_vertical" />

</LinearLayout>
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/blockdescr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="120dp"
            android:orientation="vertical"
            android:background="@drawable/frame1"
            >
            <!--<TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome to save +"
                android:textColor="@color/evernote_footer_text"
                android:padding="20dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20dp"/>-->

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Faite facilement la tontine avec votre compte MTN mobile money."
                android:textColor="@color/background_material_dark"
                android:paddingTop="20dp"
                android:paddingLeft="20dp"
                android:paddingBottom="20dp"
                android:layout_gravity="center"
                android:textStyle="normal"
                android:textSize="20dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:src="@drawable/lgo_momo"/>
            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Créer votre compte sur i-djangui et inscrivez vous dans les tontines déjà existantes ou créer la votre."
                android:textColor="@color/background_material_dark"
                android:padding="20dp"
                android:freezesText="true"
                android:layout_gravity="center"
                android:textStyle="normal"
                android:textSize="20dp"/>

        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/blocLog"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/blockdescr"
        android:background="@drawable/frame1"
        android:layout_height="wrap_content"
        android:weightSum="1">

                <Button
                    android:id="@+id/loginBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/bg_button_appreciate_good"
                    style="?android:attr/buttonBarButtonStyle"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:text="@string/login"
                    android:layout_weight="0.49" />

                <Button
                    android:id="@+id/registerBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/bg_button_appreciate_bad"
                    style="?android:attr/buttonBarButtonStyle"
                    android:textColor="@color/app_color"
                    android:textStyle="bold"
                    android:text="@string/register"
                    android:layout_weight="0.49" />

</LinearLayout>

</FrameLayout>
