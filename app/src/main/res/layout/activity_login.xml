<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.save.app.LoginActivity"
    android:id="@+id/setup_step1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        android:background="@drawable/framelog"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nom d'utilisateur :"
            android:textColor="@color/app_color"
            android:textSize="19dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:padding="10dp"/>
        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/edit"
            android:textColorHint="@color/gris_background"
            android:textColor="@color/evernote_footer_text"
            android:background="@color/white"
            android:hint="nom"
            android:layout_marginLeft="5dp"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textSize="18dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mot de passe :"
            android:textStyle="bold"
            android:textColor="@color/app_color"
            android:textSize="19dp"
            android:padding="10dp"/>
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:theme="@style/edit"
            android:textColorHint="@color/gris_background"
            android:textColor="@color/evernote_footer_text"
            android:background="@color/white"
            android:layout_marginLeft="5dp"
            android:maxLength="10"
            android:inputType="textPassword"
            android:padding="10dp"
            android:hint="**********"/>
        <Button
            android:id="@+id/loginBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_login"
            android:textColor="@color/white"
            android:text="Login"
            android:textSize="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:textAllCaps="false"/>
    </LinearLayout>
    <TextView
        android:id="@+id/psw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:textStyle="normal|italic"
        android:padding="10dp"
        android:textColor="@color/app_color_light"
        android:text="Mot de passe oubliÃ© ?"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="25dp"
        android:background="@color/app_color_light"
        android:layout_marginRight="25dp"/>
    <LinearLayout
        android:id="@+id/layoutpsw"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/framelog"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/edit"
            android:textColorHint="@color/gris_background"
            android:textColor="@color/evernote_footer_text"
            android:background="@color/white"
            android:hint="votre email"
            android:layout_marginLeft="5dp"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:layout_weight="7"
            android:textSize="18dp"/>
        <ImageButton
            android:id="@+id/sendBtn"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_login"
            android:layout_gravity="center"
            android:src="@drawable/ic_action_accept"/>
    </LinearLayout>

</LinearLayout>
